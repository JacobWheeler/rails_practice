<h1>People</h1>
<hr />

<%= link_to 'New Entry', new_person_path %>

<% if @people.empty? %>
  <h3>Nothing to report...</h3>
  <% else %>
  <ul>
    <% @people.each do |people| %>
    <li>
      <%= link_to people.name, people_path(people) %>
      <%= link_to 'Delete', people_path(people), method: :delete %>
      <%= link_to 'Show Description', person_path(people) %>
    </li>
    <% end %>
  </ul>
<% end %>
